<% if @facts['nest'] -%>
AddKeysToAgent yes
CanonicalizeHostname yes
CanonicalDomains nest home umd.edu

<% end -%>
# Routers
Host router.mgmt.home nest.james.tl
    ForwardX11 no
Host bushytail.thestaticvoid.com
    User admin
    ForwardX11 no
    LocalForward 8443 bushytail.home:8443
Host bushytail.home
    User admin
    ForwardX11 no

# Phone
Host motox.nest
    User root
    Port 2222
    ForwardX11 no

# Git hosts
Host gitlab.umd.edu
    ForwardX11 no
Host github.com
    ForwardX11 no

# My stuff
Host *.nest
    User james
    ForwardAgent yes
    ForwardX11 yes
    ForwardX11Trusted yes
    ServerAliveInterval 60

# Work stuff
Host *.umd.edu *.internal
    User jtl
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes
    PreferredAuthentications gssapi-with-mic,keyboard-interactive,password
    ForwardAgent yes
    ForwardX11 yes
    ForwardX11Trusted yes
    ServerAliveInterval 60

# Defaults
Host *
    ForwardAgent yes
    ForwardX11 yes
    ForwardX11Trusted yes
    ServerAliveInterval 60
