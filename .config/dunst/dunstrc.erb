<% require 'colorscheme'
dark = ColorScheme.dark.colors_by_base
gui_scaling_factor = @facts['scaling'] ? @facts['scaling']['gui'] : 1
text_scaling_factor = @facts['scaling'] ? @facts['scaling']['text'] : 1
-%>
[global]
geometry = "<%= (400 * gui_scaling_factor).round %>x4-<%= (7 * text_scaling_factor).round %>+<%= (25 * text_scaling_factor).round %>"
shrink = true
corner_radius = <%= (4 * gui_scaling_factor).round %>
padding = <%= (4 * gui_scaling_factor).round %>
horizontal_padding = <%= (8 * gui_scaling_factor).round %>
separator_height = <%= (1 * gui_scaling_factor).round %>
separator_color = foreground
transparency = 10

font = sans 9
markup = full
format = "<b>%s</b>\n%b"
word_wrap = true

icon_position = left
max_icon_size = <%= (48 * gui_scaling_factor).round %>
icon_path = /usr/share/dunst/icons/actions:/usr/share/dunst/icons/devices:/usr/share/dunst/icons/status

dmenu = /usr/bin/rofi -dmenu -p dunst
sticky_history = false

[shortcuts]
close = mod4+shift+c
history = mod4+shift+p
context = mod4+shift+space

[urgency_low]
background = "<%= dark[0x01].web %>"
foreground = "<%= dark[0x04].web %>"

[urgency_normal]
background = "<%= dark[0x01].web %>"
foreground = "<%= dark[0x06].web %>"

[urgency_critical]
background = "<%= dark[0x08].shade.web %>"
foreground = "<%= dark[0x06].web %>"
